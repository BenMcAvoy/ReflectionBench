{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Configure (VS 2022, vcpkg)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy", "Bypass",
				"-Command",
				"& '${workspaceFolder}\\scripts\\configure.ps1' -Workspace '${workspaceFolder}'"
			],
			"problemMatcher": []
		},
		{
			"label": "CMake: Build (Release)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy", "Bypass",
				"-Command",
				"& '${workspaceFolder}\\scripts\\build.ps1' -Workspace '${workspaceFolder}'"
			],
			"dependsOn": ["CMake: Configure (VS 2022, vcpkg)"],
			"problemMatcher": []
		},
		{
			"label": "Run meta_bench and render json",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy", "Bypass",
				"-Command",
				"& '${workspaceFolder}\\scripts\\run.ps1' -Workspace '${workspaceFolder}'"
			],
			"dependsOn": ["CMake: Build (Release)"],
			"problemMatcher": []
		}
	]
}